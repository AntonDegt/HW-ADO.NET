<Window x:Class="ADO.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"  FontSize="52">Connect-Mode </Label>
        <Button Margin="40 0" FontSize="32" FontStyle="Italic" Height="50" Grid.Row="1" Click="ConnectedButton"> Connected </Button>
        <Button Margin="40 0" FontSize="32" FontStyle="Italic" Height="50" Grid.Row="2" Click="DisconnectedButton"> Disconnected </Button>
        <Button Margin="40 0" FontSize="32" FontStyle="Italic" Height="50" Grid.Row="3" Click="LINQButton"> LINQ </Button>
    </Grid>
</Window>
